{
  "appId": "com.tuapp.cart",
  "productName": "VerduSoft",
  "directories": {
    "output": "dist_electron"
  },
  "files": ["dist/**/*", "resources/**/*"],
  "extraResources": [
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "build/icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icon.png"
  }
}
